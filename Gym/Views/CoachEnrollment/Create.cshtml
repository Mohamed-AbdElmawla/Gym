@model PhotoViewModel
<h1>
    Please Add Your Validation Documents 
</h1>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="form-container">
                <form asp-controller="CoachEnrollment" asp-action="Create" method="post">
                    <div class="form-group">
                        <label for="Photo">National ID Photo</label>
                        <input asp-for="@Model.Photo" type="file" name="Model.Photo" accept=".jpg, .jpeg, .png" class="form-control" placeholder="Choose your photo">
                        <span asp-validation-for="@Model.Photo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button id="registerSubmit" type="submit" class="btn btn-primary"> Apply </button>
                    </div>
                </form>
            </div>
        </div>    
    </div>
</div>
