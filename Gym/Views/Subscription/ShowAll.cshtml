@model List<Gym.Models.Subscription>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pricing Plans</title>
    <style>
        /* Add your CSS styles here */
        /* Example styles for pricing table */
        .pricing-table {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
        }

        .pricing-plan {
            border: 1px solid #ccc;
            border-radius: 8px;
            padding: 20px;
            text-align: center;
        }

            .pricing-plan h3 {
                color: #333;
            }

            .pricing-plan .price {
                font-size: 24px;
                margin-top: 10px;
            }

            .pricing-plan ul {
                list-style-type: none;
                padding: 0;
            }

            .pricing-plan li {
                margin-bottom: 10px;
            }

            .pricing-plan .btn {
                background-color: #007bff;
                color: #fff;
                padding: 10px 20px;
                border: none;
                border-radius: 5px;
                text-decoration: none;
                display: inline-block;
                margin-top: 20px;
            }
    </style>
</head>
<body>
    <div class="pricing-table">
        <!-- Personal Plan -->
        @foreach(var item in Model)
        {

            <div class="pricing-plan">
                <h3>Personal</h3>
                <div class="price">$10/month</div>
                <ul>
                    <li>Storage: 10GB</li>
                    <li>File Transfer Limit: 1GB/day</li>
                    <li>File Restoration: 30 days</li>
                </ul>
                <a href="#" class="btn">Try Now</a>
            </div>

        }
        <a href="#" style="position: fixed; bottom: 20px; right: 20px; background-color: #007bff; color: #fff; padding: 10px 20px; border: none; border-radius: 5px; text-decoration: none;">Add Subscription</a>
        <!-- Professional Plan -->

        <!-- Team Plan -->

        <!-- Company Plan -->
    </div>
</body>
</html>
